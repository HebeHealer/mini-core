/* pages/user/index.wxss */
.userinfo{
  position: absolute;
  width: 100%;
  height: 60px;
  
  border-bottom: 1px solid #eee;
  top: 0px;
  left: 0px;
  overflow: hidden;
  line-height:40px;
  padding: 20px 20px 0px;
}
.userinfo .avatar {
  width: 40px;
  height: 40px;
  border-radius: 100%;
  float: left;
  margin-right: 10px
}
.userlist{
  width: 100%;
}
.block-list{
  width: 100%;
}
.section{
  width: 100%;
  height: 48px;
  display: block;
  padding: 0px 20px;
  border-bottom: 1px solid #eee;
  font-size: 13px;
  line-height: 48px;
}
.footer{
  height: 60px;
  width: 100%;
  position: fixed;
  bottom: 0px;
}